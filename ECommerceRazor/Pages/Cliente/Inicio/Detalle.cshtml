@page
@model ECommerceRazor.Pages.Cliente.Inicio.DetalleModel
@{
    ViewData["Title"] = "Detalle del Producto";
}

<div class="container mt-5">
    <div class="row">
        <!-- Imagen del producto -->
        <div class="col-md-6">
            <img src="@Url.Content($"~/img/{Model.CarritoCompra.Producto.Imagen}")" alt="@Model.CarritoCompra.Producto.Nombre" class="img-fluid rounded shadow w-100 h-100">
        </div>

        <!-- Detalles del producto -->
        <div class="col-md-6">
            <h1 class="display-5">@Model.CarritoCompra.Producto.Nombre</h1>
            <p class="text-muted">
                <strong>Categoría: </strong>@Model.CarritoCompra.Producto.Categoria.Nombre
            </p>
            <p class="h4 text-primary">
                <strong>Precio: </strong>$@Model.CarritoCompra.Producto.Precio
            </p>
            <p class="mt-4">
                @Model.CarritoCompra.Producto.Descripcion
            </p>
            <p><strong>Cantidad disponible: </strong>@Model.CarritoCompra.Producto.CantidadDisponible</p>

            <!-- Formulario para cantidad -->
            <form method="post">
                <div class="mb-3">
                    <label for="Cantidad" class="form-label"><strong>Cantidad a agregar al carrito:</strong></label>
                    <input type="number" class="form-control" id="Cantidad" name="Cantidad" value="1" min="1" max="@Model.CarritoCompra.Producto.CantidadDisponible" required>
                    <span asp-validation-for="CarritoCompra.Cantidad" class="text-danger"></span>
                </div>

                <!-- Botones -->
                <div class="d-flex gap-2">
                    <a asp-page="/Cliente/Inicio/Index" class="btn btn-secondary">Volver a la tienda</a>
                    <button type="submit" class="btn btn-success"><i class="bi bi-cart3"></i> Agregar al carrito</button>
                </div>
            </form>
        </div>
    </div>
</div>