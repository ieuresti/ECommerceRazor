@model ECommerceRazor.Pages.Admin.Categorias.IndexModel
@{
    ViewData["Title"] = "Lista de Categorias";
}

<div class="container mt-4">

    @* @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    } *@

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Lista de categorias</h2>

        <a asp-page="Crear" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Crear nueva categoria
        </a>
    </div>

    @if (Model.Categorias != null && Model.Categorias.Any())
    {
        <table id="categoriasTable" class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>@Html.DisplayNameFor(model => model.Categorias.First().Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Categorias.First().OrdenVisualizacion)</th>
                    <th>Fecha de creación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categoria in Model.Categorias)
                {
                    <tr>
                        <td>@categoria.Id</td>
                        <td>@categoria.Nombre</td>
                        <td>@categoria.OrdenVisualizacion</td>
                        <td>@categoria.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-page="Editar" asp-route-id="@categoria.Id">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a class="btn btn-info btn-sm" asp-page="Detalle" asp-route-id="@categoria.Id">
                                <i class="bi bi-info-circle"></i> Detalle
                            </a>
                            <!-- Esto genera un token antifalsificación para la solicitud de eliminación -->
                            @Html.AntiForgeryToken()
                            <button class="btn btn-danger btn-sm btn-delete" data-id="@categoria.Id" data-name="@categoria.Nombre">
                                <i class="bi bi-trash"></i> Borrar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    } else
    {
        <div class="alert alert-info" role="alert">
            No hay categorias disponibles. Por favor, agrega una nueva categoria.
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/categoriasTable.js"></script>
    <script src="~/js/eliminarCategoria.js"></script>
}
