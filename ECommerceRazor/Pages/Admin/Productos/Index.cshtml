@page
@model ECommerceRazor.Pages.Admin.Productos.IndexModel
@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Lista de productos</h2>

        <a asp-page="Crear" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Crear nuevo producto
        </a>
    </div>

    @if (Model.Productos != null && Model.Productos.Any())
    {
        <table id="productosTable" class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>@Html.DisplayNameFor(model => model.Productos.First().Nombre)</th>
                    <th>Descripción</th>
                    <th>Imagen</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Categoría</th>
                    <th>Fecha de creación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model.Productos)
                {
                    <tr>
                        <td>@producto.Id</td>
                        <td>@producto.Nombre</td>
                        <td>@producto.Descripcion</td>
                        <td>
                            @if (!string.IsNullOrEmpty(producto.Imagen))
                            {
                                <img src="@Url.Content($"~/img/{producto.Imagen}")" alt="@producto.Nombre" style="width: 100px; height: auto;" />
                            }
                            else
                            {
                                <span>No disponible</span>
                            }
                        </td>
                        <td>@producto.Precio.ToString("N")</td>
                        <td>@producto.CantidadDisponible</td>
                        <td>@producto.Categoria.Nombre</td>
                        <td>@producto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-page="Editar" asp-route-id="@producto.Id">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a class="btn btn-info btn-sm" asp-page="Detalle" asp-route-id="@producto.Id">
                                <i class="bi bi-info-circle"></i> Detalle
                            </a>
                            <!-- Esto genera un token antifalsificación para la solicitud de eliminación -->
                            @Html.AntiForgeryToken()
                            <button class="btn btn-danger btn-sm btn-delete" data-id="@producto.Id" data-name="@producto.Nombre">
                                <i class="bi bi-trash"></i> Borrar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No hay productos disponibles. Por favor, agrega un nuevo producto.
        </div>
    }
</div>

@section Scripts {

    <script>
        // Inicialización de DataTables con configuración en español cuando el documento esté listo
        $(document).ready(function () {
            // Inicializa DataTables en la tabla con ID 'productosTable'
            $('#productosTable').DataTable({
                // Configuración de idioma en español
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                pageLength: 10, // Número de filas por página
                ordering: true, // Habilitar ordenamiento
                searching: true, // Habilitar búsqueda
                columnDefs: [
                    { orderable: false, targets: 4 } // Deshabilitar ordenamiento en la columna de imagen
                ]
            });
        });
    </script>

    <script>
        // Manejo del evento de eliminación con SweetAlert2

        // Selecciona todas las clases de HTML con la clase .btn-delete
        document.querySelectorAll('.btn-delete').forEach(button => {
            // Agrega un listener para el evento 'click' en cada botón
            button.addEventListener('click', function () {
                // Obtiene el ID y el nombre del producto desde los atributos data-id y data-name del botón
                const productoId = this.getAttribute('data-id');
                const productoName = this.getAttribute('data-name');

                // Llamada a SweetAlert2 para mostrar el diálogo de confirmación
                Swal.fire({
                    title: `¿Estás seguro de eliminar el producto "${productoName}"?`,
                    text: "Esta acción no se puede deshacer.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Sí, eliminar",
                    cancelButtonText: "Cancelar"
                }).then((result) => {
                    // Si el usuario confirma, result.isConfirmed será true
                    if (result.isConfirmed) {
                        // Realiza la solicitud fetch para eliminar el producto
                        fetch("?handler=Delete", {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json",
                                // Se obtiene el token antifalsificación del formulario oculto generado por Razor
                                "RequestVerificationToken": document.querySelector('input[name="__RequestVerificationToken"]').value
