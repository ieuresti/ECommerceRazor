                            if (data.success) {
                                Swal.fire(
                                    "Eliminado",
                                    `El producto "${productoName}" ha sido eliminado.`,
                                    "success"
                                ).then(() => {
                                    window.location.reload();
                                });
                            } else {
                                // Si el servidor indica error, lo mostramos con un modal de error
                                Swal.fire(
                                    "Error",
                                    data.message || "Ocurrió un problema al eliminar el producto.",
                                    "error"
                                );
