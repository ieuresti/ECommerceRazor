@page
@model ECommerceRazor.Pages.Admin.Productos.IndexModel
@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Lista de productos</h2>

        <a asp-page="Crear" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Crear nuevo producto
        </a>
    </div>

    @if (Model.Productos != null && Model.Productos.Any())
    {
        <table id="productosTable" class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>@Html.DisplayNameFor(model => model.Productos.First().Nombre)</th>
                    <th>Descripción</th>
                    <th>Imagen</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Categoría</th>
                    <th>Fecha de creación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model.Productos)
                {
                    <tr>
                        <td>@producto.Id</td>
                        <td>@producto.Nombre</td>
                        <td>@producto.Descripcion</td>
                        <td>
                            @if (!string.IsNullOrEmpty(producto.Imagen))
                            {
                                <img src="@Url.Content($"~/img/{producto.Imagen}")" alt="@producto.Nombre" style="width: 100px; height: auto;" />
                            }
                            else
                            {
                                <span>No disponible</span>
                            }
                        </td>
                        <td>@producto.Precio.ToString("N")</td>
                        <td>@producto.CantidadDisponible</td>
                        <td>@producto.Categoria.Nombre</td>
                        <td>@producto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-page="Editar" asp-route-id="@producto.Id">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a class="btn btn-info btn-sm" asp-page="Detalle" asp-route-id="@producto.Id">
                                <i class="bi bi-info-circle"></i> Detalle
                            </a>
                            <!-- Esto genera un token antifalsificación para la solicitud de eliminación -->
                            @Html.AntiForgeryToken()
                            <button class="btn btn-danger btn-sm btn-delete" data-id="@producto.Id" data-name="@producto.Nombre">
                                <i class="bi bi-trash"></i> Borrar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No hay productos disponibles. Por favor, agrega un nuevo producto.
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/productosTable.js"></script>
    <script src="~/js/eliminarProducto.js"></script>
}
